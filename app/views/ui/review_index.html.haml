      .row
        .review.clearfix
          .col-xs-2.col-xs-offset-1
            =image_tag "example_avatar.png", size: "120x120"
          .col-xs-8
            .review-title.clearfix
              .review-heading.clearfix
                .review-name-place
                  Alice A. wrote a review for Cappuccinos
                .review-time-ago.small.text-muted
                  4 hours ago
              .review-sub-heading.clearfix
                .review-stars
                  4/5 Stars
                .review-date.text-muted
                  28/9/2015
