.full-width-container.gray-background
  .container.page-container
    .row.top-spacer
      .col-xs-10.col-xs-offset-1
        .row
          .col-xs-10.col-xs-offset-1
            .gray-bottom-border
              %h3.yelq-title
                Write a Review
        .row
          .business-entry.clearfix
            .col-xs-2.col-xs-offset-1
              =image_tag "example_avatar.png", size: "120x120"
            .col-xs-6
              .business-details-left.clearfix
                .ul
                  .li
                    .business-name
                      Cappuccinos
                  .li
                    Cafe
                  .li
                    .review-stars
                      4/5 Stars
                    .review-number.text-muted
                      8 reviews
            .col-xs-2
              .business-details-right
                .ul
                  .li
                    22 Street Name
                  .li
                    City
                  .li
                    County
                  .li
                    01234 567890
        .row
          .col-xs-10.col-xs-offset-1
            .form
              %fieldset
                .row
                  .col-xs-4
                    %select.form-control
                      %option 5 Stars
                      %option 4 Stars
                      %option 3 Stars
                      %option 2 Stars
                      %option 1 Star
                .row.top-spacer.bottom-spacer
                  .col-xs-12
                    %textarea.form-control(rows="5")
