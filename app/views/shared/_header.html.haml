.container
  #header-main
    .row
      .col-md-2#header-left
        #header-logo
          yelq*
      .col-md-8#header-center
        .row.row-mini#seach-bar
          %form
            .form-group.form-group-mini.col-md-6
              .input-group
                .input-group-addon Find
                %input.form-control.input-sm(type="text" placeholder="sushi")
            .form-group.col-md-6
              .input-group
                .input-group-addon Near
                %input.form-control.input-sm(type="text" placeholder="Tokyo")
        .row#navigation
          %ul.list-inline.col-md-12
            %li
              = link_to "Home"
            %li
              = link_to "About Me"
            %li
              = link_to "Write a Review"
            %li
              = link_to "Find Friends"
      .col-md-2#header-right
        #header-sign-in-up
          %ul
            %li
              %button.btn.btn-danger.btn-sm(type="submit") Sign Up
            %li
              %button.btn.btn-danger.btn-xs(type="submit") Log In
