.container.page-container
  .row
    .col-xs-6
      .row
        .col-xs-10.col-xs-offset-1
          %h3.yelq-title
            Recent Reviews
      - @reviews.each do |review|
        .row
          .col-xs-10.col-xs-offset-1
            .gray-bottom-border
        .row
          .review.clearfix
            .col-xs-3.col-xs-offset-1
              = image_tag avatar_url(review.creator), size: "80x80"
            .col-xs-7
              .review-title.clearfix
                .review-heading.clearfix
                  .review-name-place
                    = link_to "#{review.creator.display_name}", review.creator
                    = " - "
                    = link_to "#{review.business.name}", review.business
                  .review-time-ago.small.text-muted
                    = "#{time_ago_in_words(review.created_at)} ago"
                .review-sub-heading.clearfix
                  .review-stars
                    = "#{review.rating}/5 Stars"
              .review-text.top-spacer
                = review.content
    .col-xs-6
      .row
        .col-xs-10.col-xs-offset-1
          %h3.yelq-title
            Popular Businesses
      - @businesses.each do |business|
        .row
          .col-xs-10.col-xs-offset-1
            .gray-bottom-border
        .row
          .business-entry.clearfix
            .col-xs-3.col-xs-offset-1
              = image_tag business.main_picture, size: "80x80"
            .col-xs-5
              .business-details-left.clearfix
                .ul
                  .li
                    .business-name
                      = link_to business.name, business
                  .li
                    = business.category.name
                  .li
                    = business.city
                  .li
                    = business.country
            .col-xs-3
              .ul
                .li
                  = "#{business.average_rating} Stars"
                .li
                  .text-muted
                    = "#{business.reviews.count} reviews"
