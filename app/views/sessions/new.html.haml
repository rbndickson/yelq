.full-width-container.gray-background
  .container.page-container
    .row.bottom-spacer
      .col-xs-6
        .row
          .col-xs-10.col-xs-offset-1
            .gray-bottom-border
              %h4.yelq-title Log In
            .top-spacer.bottom-spacer
              = bootstrap_form_tag layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-8", url: login_path, method: 'POST' do |f|
                = f.email_field :email, label: "Email Address", label_class: "yelq-title"
                = f.password_field :password, label_class: "yelq-title"
                = f.submit value: "Log In", class: "btn btn-yelq-gray pull-right"
      .col-xs-6.text-center
        .row
          .col-xs-10.col-xs-offset-1
            %h4.yelq-title.bottom-spacer No Account Yet?
            %p.bottom-spacer That's okay, sign up today.
            %button.btn.btn-yelq-red= link_to "Sign Up", signup_path
